<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ui.MovieDetailsController"
            prefWidth="950"
            prefHeight="700"
            styleClass="app-root">

    <!-- Top -->
    <top>
        <VBox spacing="8"
              styleClass="top-container">

            <ToolBar styleClass="top-bar">
                <Button text="Back"
                        prefHeight="32"
                        onAction="#goBack"
                        styleClass="nav-button-home"/>
            </ToolBar>

        </VBox>
    </top>

    <!-- Content -->
    <center>
        <VBox spacing="20"
              styleClass="details-root">

            <HBox spacing="30"
                  VBox.vgrow="ALWAYS">

                <!-- LEFT COLUMN -->
                <VBox spacing="12"
                      alignment="TOP_LEFT">

                    <VBox styleClass="poster-frame">
                        <ImageView fx:id="posterImage"
                                   fitWidth="300"
                                   preserveRatio="true"/>
                    </VBox>

                    <Button fx:id="homepageLink"
                            text="IMDB Page"
                            focusTraversable="false"
                            styleClass="external-link-button"
                            visible="false"/>
                </VBox>

                <!-- RIGHT COLUMN -->
                <VBox spacing="10">

                    <Label fx:id="titleLabel"
                           styleClass="details-title"/>

                    <Label fx:id="taglineLabel"
                           wrapText="true"
                           styleClass="details-tagline"/>

                    <Label fx:id="statusLabel"
                           styleClass="details-status"/>

                    <!-- META -->
                    <VBox spacing="6">

                        <HBox spacing="6">
                            <Label text="Runtime:"
                                   styleClass="details-meta-label"/>
                            <Label fx:id="runtimeLabel"
                                   styleClass="details-meta-value"/>
                        </HBox>

                        <HBox spacing="6">
                            <Label text="Release Date:"
                                   styleClass="details-meta-label"/>
                            <Label fx:id="releaseDateLabel"
                                   styleClass="details-meta-value"/>
                        </HBox>

                        <HBox spacing="6">
                            <Label text="Genre:"
                                   styleClass="details-meta-label"/>
                            <Label fx:id="genreLabel"
                                   wrapText="true"
                                   styleClass="details-meta-value"/>
                        </HBox>

                        <!-- RATING -->
                        <HBox alignment="CENTER_LEFT"
                              spacing="5">

                            <HBox spacing="6"
                                  alignment="CENTER_LEFT"
                                  styleClass="rating-badge">
                                <Label text="â˜…"
                                       styleClass="rating-star"/>
                                <Label fx:id="ratingLabel"
                                       styleClass="rating-text"/>
                            </HBox>

                            <HBox spacing="6"
                                  alignment="CENTER"
                                  styleClass="vote-count-badge">

                                <Label fx:id="voteCountLabel"
                                       styleClass="vote-count-text"/>
                            </HBox>

                        </HBox>
                    </VBox>

                    <!-- OVERVIEW -->
                    <ScrollPane fitToWidth="true"
                                VBox.vgrow="ALWAYS"
                                styleClass="details-scroll-pane">

                        <content>
                            <VBox spacing="14">

                                <Label fx:id="overviewLabel"
                                       wrapText="true"
                                       focusTraversable="false"
                                       styleClass="details-overview"/>

                                <!-- CREDITS -->
                                <VBox spacing="10">

                                    <VBox spacing="2">
                                        <Label text="Director"
                                               styleClass="details-section-title"/>
                                        <Label fx:id="directorLabel"
                                               styleClass="details-section-text"/>
                                    </VBox>

                                    <VBox spacing="2">
                                        <Label text="Actors"
                                               styleClass="details-section-title"/>
                                        <Label fx:id="actorsLabel"
                                               wrapText="true"
                                               styleClass="details-section-text"/>
                                    </VBox>

                                    <VBox spacing="2">
                                        <Label text="Languages"
                                               styleClass="details-section-title"/>
                                        <Label fx:id="languagesLabel"
                                               styleClass="details-section-text"/>
                                    </VBox>

                                </VBox>
                            </VBox>
                        </content>
                    </ScrollPane>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
