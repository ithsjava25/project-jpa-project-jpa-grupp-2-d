<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ui.MovieDetailsController"
            prefWidth="950" prefHeight="700"
            style="-fx-background-color: #141414;">

    <top>
        <VBox spacing="8" style="-fx-padding: 10; -fx-background-color: #141414;">

            <ToolBar style="-fx-background-color: #141414;">
                <Button text="Back"
                        prefHeight="32"
                        onAction="#goBack"
                        styleClass="nav-button-home"/>
            </ToolBar>

        </VBox>

    </top>


    <center>
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #141414;">


            <HBox spacing="30" VBox.vgrow="ALWAYS">

                <VBox spacing="12" alignment="TOP_LEFT">


                    <VBox styleClass="poster-frame">
                        <ImageView fx:id="posterImage"
                                   fitWidth="300"
                                   preserveRatio="true"/>
                    </VBox>


                    <Button  fx:id="homepageLink"
                               text="Movie Page"
                               focusTraversable="false"
                               styleClass="external-link-button"
                               visible="false"/>
                </VBox>




                <VBox spacing="10">

                    <Label fx:id="titleLabel"
                           style="
                           -fx-font-size: 26px;
                           -fx-font-weight: bold;
                           -fx-text-fill: white;"/>

                    <Label fx:id="taglineLabel"
                           wrapText="true"
                           style="
                           -fx-font-size: 14px;
                           -fx-font-style: italic;
                           -fx-text-fill: #bbbbbb;"/>

                    <Label fx:id="statusLabel"
                           style="
                           -fx-font-size: 12px;
                           -fx-text-fill: #aaaaaa;"/>


                    <VBox spacing="6">

                        <HBox spacing="6">
                            <Label text="Runtime:"
                                   style="-fx-text-fill: #aaaaaa; -fx-font-size: 13px;"/>
                            <Label fx:id="runtimeLabel"
                                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                        </HBox>

                        <HBox spacing="6">
                            <Label text="Release Date:"
                                   style="-fx-text-fill: #aaaaaa; -fx-font-size: 13px;"/>
                            <Label fx:id="releaseDateLabel"
                                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                        </HBox>

                        <HBox spacing="6">
                            <Label text="Genre:"
                                   style="-fx-text-fill: #aaaaaa; -fx-font-size: 13px;"/>
                            <Label fx:id="genreLabel"
                                   wrapText="true"
                                   style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                        </HBox>


                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <HBox spacing="6"
                                  alignment="CENTER_LEFT"
                                  styleClass="rating-badge">
                                <Label text="â˜…" styleClass="rating-star"/>
                                <Label fx:id="ratingLabel" styleClass="rating-text"/>
                            </HBox>
                            <HBox spacing="6"
                                  alignment="CENTER"
                                  style="
                                  -fx-background-color: rgba(255,255,255,0.08);
                                  -fx-background-radius: 14;
                                  -fx-padding: 4 10;">

                                <Label fx:id="voteCountLabel"
                                       style="-fx-text-fill: #dddddd; -fx-font-size: 12px;"/>
                            </HBox>
                        </HBox>
                    </VBox>


                    <ScrollPane fitToWidth="true"
                                VBox.vgrow="ALWAYS"
                                style="
                                -fx-background: transparent;
                                -fx-background-color: transparent;">

                        <content>
                            <VBox spacing="14">

                                <!-- Overview -->
                                <Label fx:id="overviewLabel"
                                       wrapText="true"
                                       focusTraversable="false"
                                       style="
                                       -fx-font-size: 14px;
                                       -fx-text-fill: #dddddd;
                                       -fx-background-color: transparent;"/>

                                <!-- Credits -->
                                <VBox spacing="10">

                                    <VBox spacing="2" VBox.vgrow="ALWAYS">
                                        <Label text="Director"
                                               style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                                        <Label fx:id="directorLabel"
                                               style="-fx-text-fill: #cccccc;"/>
                                    </VBox>

                                    <VBox spacing="2">
                                        <Label text="Actors"
                                               style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                                        <Label fx:id="actorsLabel"
                                               wrapText="true"
                                               style="-fx-text-fill: #cccccc;"/>
                                    </VBox>

                                    <VBox spacing="2">
                                        <Label text="Languages"
                                               style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
                                        <Label fx:id="languagesLabel"
                                               style="-fx-text-fill: #cccccc;"/>
                                    </VBox>


                                </VBox>

                            </VBox>
                        </content>

                    </ScrollPane>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>


