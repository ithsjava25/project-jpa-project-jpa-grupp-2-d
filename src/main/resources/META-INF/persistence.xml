<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
               https://jakarta.ee/xml/ns/persistence
               https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="myPU" transaction-type="RESOURCE_LOCAL">

        <!-- Entities -->
        <class>org.example.movie.entity.Movie</class>
        <class>org.example.movie.entity.Person</class>
        <class>org.example.movie.entity.Role</class>
        <class>org.example.movie.entity.Favorite</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>

            <!-- JDBC -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/moviedb?useSSL=false
                      &amp;serverTimezone=UTC
                      &amp;allowPublicKeyRetrieval=true"/>
            <property name="jakarta.persistence.jdbc.user"
                      value="movieuser"/>
            <property name="jakarta.persistence.jdbc.password"
                      value="moviepass"/>

            <!-- Hibernate -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto"
                      value="update"/>
            <property name="hibernate.connection.pool_size" value="5"/>

            <!-- Debug -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>

            <!-- Stabilitet -->
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.jdbc.time_zone" value="UTC"/>

        </properties>

    </persistence-unit>
</persistence>

