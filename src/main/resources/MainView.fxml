<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--New version-->
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ui.MainController"
            style="-fx-background-color: #141414;">

    <!-- Top -->
    <top>
        <VBox spacing="8" style="-fx-padding: 10; -fx-background-color: #141414;">


            <ToolBar styleClass="top-bar" style="-fx-background-color: #141414;">
                <Button fx:id="homeButton"
                        text="Home"
                        prefHeight="32"
                        onAction="#loadTopRatedFromDatabase"
                        styleClass="nav-button"/>

                <Button fx:id="newReleasesButton"
                        text="New Releases"
                        prefHeight="32"
                        onAction="#loadNewReleases"
                        styleClass="nav-button"/>

                <TextField fx:id="searchField"
                           prefHeight="32"
                           promptText="Search movies..."
                           prefWidth="300"
                           style="-fx-background-color: #222;
                           -fx-text-fill: white;
                           -fx-prompt-text-fill: #999;"/>

            </ToolBar>

            <!-- Filter Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 0 6;">
                <Label text="Genre:" style="-fx-text-fill: white;"/>

                <ComboBox fx:id="genreComboBox"
                          promptText="All genres"
                          onAction="#filterByGenre"/>

            </HBox>
        </VBox>
    </top>

    <!--Movie Grid-->
    <center>
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    vbarPolicy="AS_NEEDED"
                    hbarPolicy="NEVER"
                    style="-fx-background: #141414; -fx-background-color: #141414;">

            <content>
                <FlowPane fx:id="movieContainer"
                          hgap="15"
                          vgap="15"
                          prefWrapLength="1300"
                          alignment="TOP_LEFT"
                          style="-fx-background-color: #141414;">

                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                </FlowPane>
            </content>

        </ScrollPane>
    </center>
</BorderPane>
