<!--New version-->
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ui.MainController"
            prefWidth="1000" prefHeight="800">

    <!-- Top -->
    <top>
        <VBox spacing="8" style="-fx-padding: 10;">
            <Label text="Movie Database"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <ToolBar>
                <Button text="Home" onAction="#loadHome"/>
                <Button text="Top Rated" onAction="#loadTopRated"/>
                <Button text="New Releases" onAction="#loadNewReleases"/>

                <Separator orientation="VERTICAL"/>

                <TextField fx:id="searchField"
                           promptText="Search movies..."
                           prefWidth="200"/>

                <Button text="Search" onAction="#search"/>
            </ToolBar>

            <!-- Filter Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Genre:"/>
                <ComboBox fx:id="genreComboBox"
                          promptText="All genres"
                          onAction="#filterByGenre"/>
            </HBox>
        </VBox>
    </top>

    <!--Movie Grid-->
    <center>
        <ScrollPane fitToWidth="true"
                    vbarPolicy="AS_NEEDED">
            <content>
                <FlowPane fx:id="movieContainer"
                          hgap="15"
                          vgap="15"
                          prefWrapLength="900">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
